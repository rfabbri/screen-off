<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".Main">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/linearLayout2"
        android:layout_toStartOf="@+id/linearLayout2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_above="@+id/button">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="sans-serif-light"
                android:textSize="40sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:fontFamily="sans-serif-light"
                android:id="@+id/version"/>
        </LinearLayout>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_action_communication_chat"
            android:tint="@android:color/darker_gray"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/action_feedback"
            android:layout_margin="16dp"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_action_remove_privilege"
            android:tint="@android:color/darker_gray"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/action_remove_p"
            android:layout_margin="16dp"/>


        <android.support.v7.widget.CardView
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:cardCornerRadius="3dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/colorAccent"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardPreventCornerOverlap="true"
            android:visibility="gone"
            android:layout_margin="24dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:text="@string/action_enable"
                android:gravity="center"
                android:textColor="@android:color/white" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="8dp"
        android:id="@+id/linearLayout2">
        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:id="@+id/help_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            android:background="@android:color/white"
            app:cardBackgroundColor="@android:color/white"
            app:cardPreventCornerOverlap="true"
            android:visibility="visible"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceButton"
                    android:text="@string/title_how_to_use"
                    android:gravity="center_vertical"
                    android:id="@+id/action_done"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/white"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="12dp"
                                android:background="?attr/selectableItemBackground"
                                android:id="@+id/action_add_shortcut"
                                android:clickable="true"
                                android:paddingBottom="12dp"
                                android:gravity="center_vertical">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="16dp"
                                    android:orientation="vertical"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_shortcut"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:singleLine="true"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@android:color/black"
                                        android:alpha="0.54"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/subtitle_shortcut"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:singleLine="true"
                                        android:textColor="@android:color/black"
                                        android:alpha="0.30"/>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="8dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginEnd="12dp"
                                    android:layout_marginStart="8dp"
                                    android:src="@drawable/ic_action_add_circle"
                                    android:tint="@android:color/black"
                                    android:alpha="0.54"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:background="?attr/selectableItemBackground"
                                android:id="@+id/action_open_store"
                                android:clickable="true"
                                android:gravity="center_vertical">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="16dp"
                                    android:orientation="vertical"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_third_party_app"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:singleLine="true"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@android:color/black"
                                        android:alpha="0.54"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/subtitle_third_party_app"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:singleLine="true"
                                        android:textColor="@android:color/black"
                                        android:alpha="0.30"/>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="8dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginEnd="12dp"
                                    android:layout_marginStart="8dp"
                                    android:src="@drawable/ic_action_action_explore"
                                    android:tint="@android:color/black"
                                    android:alpha="0.54"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:id="@+id/toggle_notification"
                                android:gravity="center_vertical">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="16dp"
                                    android:orientation="vertical"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_toggle_notification"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:singleLine="true"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@android:color/black"
                                        android:alpha="0.54"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/subtitle_toggle_notification_off"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:singleLine="true"
                                        android:id="@+id/subtitle_show_notification"
                                        android:textColor="@android:color/black"
                                        android:alpha="0.30"/>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="8dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginEnd="12dp"
                                    android:layout_marginStart="8dp"
                                    android:id="@+id/notification_icon"
                                    android:src="@drawable/ic_action_circle"
                                    android:tint="@android:color/black"
                                    android:alpha="0.54"/>
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
